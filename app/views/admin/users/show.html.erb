<div class = "row mb-3">
  <div class = "col-sm-3">
    <h3 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>会員詳細</b></h3>
  </div>
</div>
<!--ページ全体のrow--->
<div class="row">
  <!--左部:ユーザーデータ詳細-->
  <div class="col-sm-5">
    <div class="row">
      <div class="col-sm-4">
        画像
      </div>
      <div class="col-sm-8">
        <%= @user.name %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table>
          <tr>
            <th>フォロー</th>
            <td>{数字-リンク}</td>
            <th>フォロワー</th>
            <td>{数字-リンク}</td>
          </tr>
        </table>
      </div>
    </div>
     <div class="row">
      <div class="col-sm-12">
        <h6>プロフィール</h6>
        <%= @user.introduction %>
        <%= @user.is_active %>
        <% if @user.is_active? %>
          <%= link_to "退会にする", admin_user_path(@user), method: :patch, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "有効にする", admin_user_path(@user), method: :patch, class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
  <!--右部:ユーザー投稿一覧(最新が上、古い投稿が下)-->
  <div class="col-sm-7 border border-secondary">
    <% @posts.each do |post| %>
      <div class="row mt-3">
        <div class="col-sm-4">
          <%= "post.image" %>
        </div>
        <div class="col-sm-6">
          <%= post.body %></br>
          <%= "tag?"%></br>
          <%= post.created_at %>
        </div>
        <div class="col-sm-2">
          <% if post.is_delete? %>
            <%= link_to "復元", admin_post_path(post), method: :patch, class: "btn btn-warning" %>
          <% else %>
            <%= link_to "削除", admin_post_path(post), method: :patch, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>