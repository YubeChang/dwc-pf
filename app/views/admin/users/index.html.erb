<%= form_with url: admin_searches_path, method: :get, local: true do |f| %>
  <div class="text-center">
    <%= f.text_field :ward %>
    <%= f.select :model_name, options_for_select([['User'], ['Book']]) %>
    <%= f.select :search_option, options_for_select([["完全一致","perfect_match"], ["前方一致","front_match"], ["後方一致","back_match"], ["部分一致","partial_match"]]) %>
    <%= f.submit '検索' %>
  </div>
<% end %>

<div class = "row mb-3">
  <div class = "col-sm-3">
    <h3 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>会員データ</b></h3>
  </div>
</div>
<div class = "row">
  <div class = "col">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr class="table-active">
          <th>登録日</th>
          <th>画像</th>
          <th>名前</th>
          <th>会員ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.created_at.strftime("%Y/%m/%d %H:%M:%S"),admin_user_path(user.id) %></td>
            <td><%= "画像" %></td>
            <td><%= user.name %></td>
            <td><%= user.is_active %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>