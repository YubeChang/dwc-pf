<div class = "row mb-3">
  <div class = "col-sm-3">
    <h3 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>投稿詳細</b></h3>
  </div>
</div>
<!--ページ全体のrow--->
<div class="row">
  <!--左部:ユーザーデータ詳細-->
  <div class="col-sm-5">
    <div class="row">
      <div class="col-sm-4">
        <!--店舗関連1-->
      </div>
      <div class="col-sm-8">
        <!--店舗関連2-->
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table>
          <tr>
            <th>店舗</th>
            <td>実装したら</td>
            <th>改修する</th>
            <td>エリア</td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h6>店舗関連</h6>
      </div>
    </div>
  </div>
  <!--右部:ユーザー投稿一覧(最新が上、古い投稿が下)-->
  <div class="col-sm-7 border border-secondary">
    <div class="row mt-3">
      <div class="col-sm-12">
        <%= link_to admin_user_path(@post.user) do %>
          <%= "post.user.image" %>
          <%= @post.user.name %>
        <% end %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-12">
        <%= @post.body %>
      </div>
    </div>
    <%# if @post.image_attached? %>
    <div class="row mt-3">
      <div class="col-sm-12">
        <%= "@post.image" %>
      </div>
    </div>
    <%# end %>
    <div class="row mt-3">
      <div class="col-sm-10">
        <%= "tag?"%></br>
        <%= @post.created_at %>
      </div>
      <div class="col-sm-2" id="post_status">
        <%= render "admin/posts/delete_btn", post: @post %>
      </div>
    </div>
  </div>
</div>