<%= render "layouts/search" %>

<div class = "row mb-3">
  <div class = "col-sm-3">
    <h3 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>投稿データ</b></h3>
  </div>
</div>
<div class = "row">
  <div class = "col">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr class="table-active">
          <th>投稿日</th>
          <th>画像</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.created_at.strftime("%Y/%m/%d %H:%M:%S"),admin_post_path(post.id) %></td>
            <td><%= "画像" %></td>
            <td><%= post.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>