<%= render "layouts/search" %>

<div class = "row mb-3">
  <div class = "col-sm-3">
    <h3 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>店舗データ</b></h3>
  </div>
</div>
<div class = "row">
  <div class = "col">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr class="table-active">
          <th>登録日</th>
          <th>名前</th>
        </tr>
      </thead>
      <tbody>
        <% @stores.each do |store| %>
          <tr>
            <td><%= link_to store.created_at.strftime("%Y/%m/%d %H:%M:%S"),admin_store_path(store.id) %></td>
            <td><%= store.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>