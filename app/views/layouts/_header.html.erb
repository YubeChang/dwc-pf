<header style="background-color: #bdb76b;">
  <nav class="navbar navbar-expand-lg navbar navbar-light">
    <div class="container">
      <div class="row navbar-collapse" id="navbarNavDropdown">
        <div class="col-sm-2">
          <%= link_to public_root_path do %>
            <span class="text-light">チルもく</span>
            <%#= image_tag "logo-image.png", size: "50x50" %>
          <% end %>
        </div>
        <div class="col-sm-10">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "about",       public_about_path %>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ",  public_user_path(current_user) %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト",  destroy_user_session_path, method: :delete %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "投稿一覧",    admin_posts_path %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧",    admin_users_path %>
              </li>
              <li class="nav-item">
                <%= link_to "店舗一覧",    admin_stores_path %>
              </li>
              <li class="nav-item">
                <%= link_to "タグ一覧",    admin_tags_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト",  destroy_admin_session_path, method: :delete %>
              </li>
            <% else %><!--非ログイン時-->
              <li class="nav-item">
                <%= link_to "about",       public_about_path %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録",   new_user_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン",   new_user_session_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>