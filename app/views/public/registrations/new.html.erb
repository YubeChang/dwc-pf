<div class="row">
  <div class="col-sm-3">
    <h3 class="text-center" style="background-color: #d3d3d3;">会員登録</h3>
  </div>
 </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field row justify-content-center my-3">
    <%= f.label :name, "名前", class: "col-sm-3" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control col-sm-4" %>
  </div>

  <div class="field row justify-content-center mb-3">
    <%= f.label :email, "メールアドレス", class: "col-sm-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-4" %>
  </div>

  <div class="field row justify-content-center mb-3">
    <%= f.label :password, "パスワード(半角英数字6文字以上)", class: "col-sm-3" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-4" %>
  </div>

  <div class="field row justify-content-center mb-3">
    <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-3" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-4" %>
  </div>

  <div class="actions text-center">
    <%= f.submit "登録する", class:"btn btn-primary" %>
  </div>
<% end %>

<%#= render "public/shared/links" %>
