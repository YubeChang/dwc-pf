<%= form_with model: user, url: public_user_path(user), method: :patch, local: false do |f| %>
<div class="row">
  <div class="col-sm-12">
    <%= f.label :user_image, "プロフィール画像" %>
    <%= f.file_field :user_image %></br>
    <%= f.label :name %>
    <%= f.text_field :name %></br>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <h6>プロフィール</h6>
     <%= f.text_area :introduction %></br>
     <%= f.submit "変更", class: "btn btn-primary" %>
     <%= link_to "退会する", confirm_public_user_path(user), class: "btn btn-danger" %>
  </div>
</div>
<% end %>